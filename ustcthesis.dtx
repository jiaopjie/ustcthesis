\renewenvironment{thebibliography}[1]{%
  \clearpage
  \@mainmatterfalse
  \ustc@save@thebibliography{#1}%
  \addcontentsline{toc}{chapter}{\bibname}%
}{\ustc@save@endthebibliography\clearpage}%
